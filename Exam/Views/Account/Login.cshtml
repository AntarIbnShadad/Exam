@using Exam.Models.ViewModel
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <table class="table table-bordered">
        <tr>
            <td><label asp-for="Username"></label></td>
            <td>
                <input asp-for="Username" class="form-control" />
            </td>
        </tr>
        <tr>
            <td><label asp-for="Password"></label></td>
            <td>
                <input asp-for="Password" class="form-control" />
            </td>
        </tr>
        <tr>
            <td><label asp-for="RemeberMe"></label></td>
            <td>
                <label asp-for="RemeberMe"></label>
                <input asp-for="RemeberMe" class="form-check-input" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" class="btn btn-success" value="Login" />
            </td>
        </tr>

    </table>

</form>