@using Exam.Models.ViewModel
@model AddUserToRoleViewModel
@{
    ViewData["Title"] = "AddUserToRole";
}

<h1>AddUserToRole</h1>

<h1>Add User to Role: @Model.RoleName</h1>

<form asp-action="AddUserToRole" method="post">
    <input type="hidden" asp-for="RoleName" />

    <div class="form-group">
        <label asp-for="SelectedUserId"></label>
        <select asp-for="SelectedUserId" asp-items="ViewBag.Users" class="form-control"></select>
        <span asp-validation-for="SelectedUserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="ListUsersUnderRole" asp-route-name="@Model.RoleName" class="btn btn-secondary">Cancel</a>
</form>